\def\rwthcommands@version{0.4}
\def\rwthcommands@date{2010/04/19}
\def\rwthcommands@msg{rwthcommands: Provide useful commands for checking\MessageBreak
  if packages are loaded or commands are defined}

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{rwthcommands}[\rwthcommands@date. v.\MessageBreak
  \rwthcommands@version. \rwthcommands@msg]
\RequirePackage{ifthen}

\newcommand{\IfDraft}[1]{\ifx\@draft\@undefined \else #1 \fi}
\newcommand{\IfNotDraft}[1]{\ifx\@draft\@undefined #1 \fi}
\newcommand{\IfNotDraftElse}[2]{\ifx\@draft\@undefined #1 \else #2 \fi}

\providecommand{\IfClass}[2]{\@ifclassloaded{#1}{#2}{}}
\providecommand{\IfNotClass}[2]{\@ifclassloaded{#1}{}{#2}}
\providecommand{\IfElseClass}[3]{\@ifclassloaded{#1}{#2}{#3}}

\providecommand{\IfPackage}[2]{\@ifpackageloaded{#1}{#2}{}}
\providecommand{\IfNotPackage}[2]{\@ifpackageloaded{#1}{}{#2}}
\providecommand{\IfElsePackage}[3]{\@ifpackageloaded{#1}{#2}{#3}}

\providecommand{\IfDef}[1]{%
  \ifcsname #1\endcsname
		\expandafter\ifx\csname #1\endcsname\relax
			\expandafter\expandafter\expandafter\@gobble
		\else
			\expandafter\expandafter\expandafter\@firstofone
		\fi
	\else
		\expandafter\@gobble
	\fi
}

\providecommand{\IfNotDef}[1]{%
  \ifcsname #1\endcsname
		\expandafter\ifx\csname #1\endcsname\relax
			\expandafter\expandafter\expandafter\@firstofone
		\else
			\expandafter\expandafter\expandafter\@gobble
		\fi
	\else
		\expandafter\@gobble
	\fi
}

\providecommand{\IfElseDef}[1]{%
  \ifcsname #1\endcsname
		\expandafter\ifx\csname #1\endcsname\relax
			\expandafter\expandafter\expandafter\@secondoftwo
		\else
			\expandafter\expandafter\expandafter\@firstoftwo
		\fi
	\else
		\expandafter\@gobble
	\fi
}
